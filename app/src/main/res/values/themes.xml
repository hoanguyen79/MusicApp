<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Giao diện sáng -->
    <style name="Theme.MusicApplication" parent="Theme.Base">
        <!-- Màu chữ mặc định -->
        <item name="android:textColor">@color/black</item>

        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>

        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray_400</item>
        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/green_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black_900</item>

        <!-- EditText -->
        <item name="editTextBackground">@drawable/rounded_edit_text_background</item>
        <item name="android:editTextBackground">@drawable/rounded_edit_text_background</item>
    </style>

    <!-- Tùy biến lại Material Button cho phù hợp với giao diện SÁNG -->
    <style name="Theme.CustomMaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">@dimen/corner_radius_small</item>
        <item name="rippleColor">@color/gray_300</item>
        <item name="strokeColor">@color/gray_300</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>