<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Background Splash Screen -->
    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Base -->
    <style name="Theme.Base" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Font chữ mặc định -->
        <item name="android:fontFamily">@font/roboto</item>

        <!-- Kích thước chữ mặc định -->
        <item name="android:textSize">@dimen/font_size_medium</item>

        <!-- Chỉnh màu status bar -->
        <item name="android:statusBarColor">?android:colorBackground</item>

        <!-- Chỉnh màu cursor và màu bôi đen -->
        <item name="colorAccent">@color/deep_purple_400</item>
        <item name="android:textColorHighlight">@color/deep_purple_400</item>
    </style>

    <!-- Bo khung (shape) một chút -->
    <style name="Theme.Rounded.ShapeableImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_small</item>
    </style>

    <!-- Bo khung (shape) thành hình tròn -->
    <style name="Theme.Circle.ShapeableImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Chỉnh phông chữ tiêu đề của ToolBar -->
    <style name="Theme.CustomTextAppearance.ExtraLarge" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/font_size_extra_large</item>
    </style>

</resources>